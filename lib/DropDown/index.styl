@require 'deepgarden'

._DropDown
	height: 0
	width: 0
	color: $palette.color
	font-weight: normal
	position: relative
	text-align: left

	&__Body
		position: absolute
		z-index: 1000
		padding: 5px 0
		background: #FFF
		border-radius: $borderRadius
		border: 1px solid $palette.descent.border
		max-height: 250px
		overflow: auto
		layer()

	&--Bottom &__Body
		top: 0
		transform: translate(-50%, 0)

	&--LeftBottom &__Body
		right: 0
		top: 0

	&--LeftTop &__Body
		right: 0
		bottom: 0

	&__Overlay
		position: fixed
		z-index: 9
		top: 0
		bottom: 0
		left: 0
		right: 0
		display: flex