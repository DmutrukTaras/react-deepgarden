@require 'deepgarden'

._DropDown
	height: 0
	width: 0
	color: $palette.color
	font-weight: normal
	position: relative
	text-align: left

	&__Body
		position: absolute
		z-index: 1000
		padding: 5px 0
		background: #FFF
		border-radius: $borderRadius
		border: 1px solid $palette.descent.border
		max-height: 250px
		overflow: auto
		layer()

	&--LeftBottom

		._DropDown

			&__Body
				right: 0
				top: 0
